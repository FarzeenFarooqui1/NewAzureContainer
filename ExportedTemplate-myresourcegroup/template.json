{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_mycontainer_workspaceKey": {
            "type": "SecureString"
        },
        "containerGroups_mycontainer_name": {
            "defaultValue": "mycontainer",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2024-10-01-preview",
            "name": "[parameters('containerGroups_mycontainer_name')]",
            "location": "canadacentral",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_mycontainer_name')]",
                        "properties": {
                            "image": "mcr.microsoft.com/azuredocs/aci-helloworld:latest",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "container",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                },
                "osType": "Linux",
                "diagnostics": {
                    "logAnalytics": {
                        "workspaceId": "2e55034f-495e-477a-a94b-bd8db0950e0b",
                        "logType": "ContainerInstanceLogs",
                        "workspaceKey": "[parameters('containerGroups_mycontainer_workspaceKey')]"
                    }
                }
            }
        }
    ]
}